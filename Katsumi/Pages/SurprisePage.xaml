<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Katsumi.Pages.SurprisePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="90"/>
            <RowDefinition Height="90"/>
        </Grid.RowDefinitions>

        <Image 
            Grid.Row="0"
            IsAnimationPlaying="True"
            Source="load.gif"
            Aspect="Center"/>

        <Button
            Grid.Row="1"
            Text="Back"
            Clicked="ButtonGoBackClicked"
            Margin="20"
            HorizontalOptions="Center" />

        <Button
            Grid.Row="2"
            Text="Back v2"
            Clicked="ButtonGoBackV2Clicked"
            Margin="20"
            HorizontalOptions="Center" />
        
    </Grid>
</ContentPage>
